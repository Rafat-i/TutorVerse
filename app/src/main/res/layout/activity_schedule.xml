<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F8FA"
    android:fillViewport="true"
    tools:context=".ScheduleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/tvScheduleTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tutor_availability"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#1A3D7C" />


            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btnBackSchedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/back"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:backgroundTint="#1A3D7C"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginLeft="12dp" />
        </LinearLayout>

        <!-- Course text -->
        <TextView
            android:id="@+id/tvSelectedCourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/course_placeholder"
            android:textSize="18sp"
            android:textColor="#1A3D7C"
            android:layout_marginBottom="10dp" />

        <!-- Info -->
        <TextView
            android:id="@+id/tvSelectedDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tap_a_day"
            android:textSize="14sp"
            android:textColor="#555555"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tvDaySectionHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_day"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#1A3D7C"
            android:padding="10dp"
            android:background="#E3ECFF" />

        <LinearLayout
            android:id="@+id/layoutDayContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginBottom="20dp">

            <GridView
                android:id="@+id/gridDays"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="5"
                android:horizontalSpacing="12dp"
                android:verticalSpacing="12dp"
                android:stretchMode="columnWidth"
                android:gravity="center" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvTutorSectionHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/available_tutors"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#1A3D7C"
            android:padding="10dp"
            android:background="#E3ECFF" />

        <LinearLayout
            android:id="@+id/layoutTutorContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="8dp"
            android:layout_marginBottom="20dp">

            <ListView
                android:id="@+id/lvSchedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="#EEEEEE"
                android:dividerHeight="6dp" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>
