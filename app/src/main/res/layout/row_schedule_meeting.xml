<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:orientation="horizontal"
    android:background="#FFFFFF"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvTutorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tutor_name"
                android:textStyle="bold"
                android:textColor="#1A3D7C"
                android:textSize="16sp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tvRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tutor_rating_sample"
                android:textColor="#FFB74D"
                android:textStyle="bold"
                android:textSize="14sp"
                android:visibility="gone"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvSubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/subject_sample"
            android:textColor="#444444"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_range_sample"
            android:textColor="#777777"
            android:textSize="13sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/book"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:backgroundTint="#1A3D7C"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" />
</LinearLayout>