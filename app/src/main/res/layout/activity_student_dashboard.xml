<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F8FA">

    <!--title-->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dashboard"
        android:textColor="#1A3D7C"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        />


    <!--subtitle-->
    <TextView
        android:id="@+id/tvBookingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Bookings"
        android:textColor="#1A3D7C"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/tvTitle"
        />
    <!--booking list-->
    <ListView
        android:id="@+id/lvMyBookings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvBookingTitle"
        android:layout_above="@id/bottomNav"
        android:divider="#CCCCCC"
        android:dividerHeight="1dp"
        android:padding="10dp"
        />

    <!--Floating Add Button-->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnAddBooking"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="70dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#1A3D7C"
        app:tint="@android:color/white"
        app:maxImageSize="30dp"
        app:useCompatPadding="false"
        app:ensureMinTouchTargetSize="false"
        app:srcCompat="@drawable/outline_add_circle_24"
        />

    <include
        android:id="@+id/bottomNav"
        layout="@layout/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>