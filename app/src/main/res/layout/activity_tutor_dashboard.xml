<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F8FA">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/tutorverse"
        android:gravity="center"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#1A3D7C"
        android:layout_centerHorizontal="true"/>

    <View
        android:id="@+id/titleUnderline"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/tvTitle"
        android:layout_marginHorizontal="16dp"
        android:background="#1A3D7C" />

    <ListView
        android:id="@+id/lvWeekly"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titleUnderline"
        android:layout_above="@id/bottomNav"
        android:layout_marginTop="10dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="8dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnSetAvailability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_above="@id/bottomNav"
        android:layout_margin="16dp"
        android:contentDescription="@string/set_my_availability"
        app:backgroundTint="#1A3D7C"
        app:tint="@android:color/white"
        app:srcCompat="@drawable/outline_add_circle_24"
        app:maxImageSize="48dp"/>

    <include
        android:id="@+id/bottomNav"
        layout="@layout/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true" />

</RelativeLayout>