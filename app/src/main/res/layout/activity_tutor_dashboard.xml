<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#F7F8FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="40dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tutor Dashboard"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#1A3D7C" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnInbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Messages"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#1A3D7C"
                android:minHeight="40dp"
                android:paddingHorizontal="12dp" />

            <TextView
                android:id="@+id/tvUnreadBadge"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/bg_badge"
                android:text="1"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="end|top"
                android:visibility="gone"
                android:elevation="4dp"/>
        </FrameLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnEditProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Profile &amp; Bio"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:backgroundTint="#1A3D7C"
        android:padding="20dp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnSetAvailability"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set My Availability"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:backgroundTint="#1A3D7C"
        android:padding="20dp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnViewBookings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View My Bookings"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:backgroundTint="#1A3D7C"
        android:padding="20dp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:backgroundTint="#D32F2F"
        android:padding="12dp" />

</LinearLayout>